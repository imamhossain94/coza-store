<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="70dp"
            app:cardElevation="2dp">

            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/customer_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_user_profile"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="0dp" />

                <ImageView
                    android:id="@+id/edit_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|center"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_round_semi_transparent"
                    android:padding="7dp"
                    app:srcCompat="@drawable/ic_camera_sutter_field_white" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_light_white"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="Fn"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer_first_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_light_white"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center|start"
                    android:minHeight="50dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_light_white"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="Ln"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_light_white"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center|start"
                    android:minHeight="50dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_light_white"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="Em"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_light_white"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center|start"
                    android:minHeight="50dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_light_white"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="Pn"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_light_white"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center|start"
                    android:minHeight="50dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_light_white"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="Ad"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_light_white"
                    android:fontFamily="sans-serif"
                    android:gravity="center|start"
                    android:minHeight="50dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:elevation="5dp" />
            </LinearLayout>

        </FrameLayout>

        <Button
            android:id="@+id/save_customer_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_light_white"
            android:text="Save Profile"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/change_customer_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_light_white"
            android:text="Change Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


</ScrollView>